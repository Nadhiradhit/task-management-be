generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id          String      @id @unique @db.VarChar(12)
  name        String?
  email       String      @unique
  password    String
  token       String?
  is_active   Boolean     @default(true)
  role        Role        @default(USER)
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
  boards      board[]     @relation("UserBoards")
}

enum Role {
  USER
  ADMIN
}

model board {
  id          String      @id @unique @db.VarChar(12)
  name        String
  created_by   String
  user        user        @relation("UserBoards", fields: [created_by], references: [id])
  is_public   Boolean
  created_at  DateTime    @default(now())
  updated_at  DateTime    @updatedAt
}